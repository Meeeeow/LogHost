        <input type="password" class="form-control" id="password" name="password" placeholder="密码" required>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Take off</button>
      </div>
    </div>
  </form>
</div>