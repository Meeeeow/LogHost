<%= erb :nav %>

<div class="container logged">
  <div class="page-title">
    <h1>编辑用户资料</h1>
  </div>
  <form action="/manage/users/edit/<%= user.id %>" method="POST">
    <div class="form-group">
      <label for="username">用户名</label>
      <input type="text" class="form-control" id="username" name="username" value="<%= user.username%>" placeholder="用户名不能为空" required>
    </div>
    <div class="form-group">
      <label for="new-password">密码</label>
      <input type="password" class="form-control" id="new_password" name="new_password" placeholder="不修改密码">
    </div>
    <button type="submit" class="btn btn-primary btn-danger">递交</button>
  </form>
</div>